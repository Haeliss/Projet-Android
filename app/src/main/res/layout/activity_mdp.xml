<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008DCA"
    tools:context="com.example.f5onz.testbluetooth.MDPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="-5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Mot de passe oubliÃ© ?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#006C9B"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:textColor="#006C9B" />

        <TextView
            android:id="@+id/mail_inv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/err_mail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_light" />

        <Button
            android:id="@+id/btn_sendmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#00A2E8"
            android:text="Envoyer"
            android:textColor="#99D9EA" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
