<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008DCA"
    tools:context="com.example.f5onz.testbluetooth.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:background="#00A2E8"
            android:rotation="180"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_left"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#00A2E8"
                android:rotation="90"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/btn_blue"
                android:layout_width="30dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#00A2E8"
                app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />

            <ImageButton
                android:id="@+id/btn_right"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#00A2E8"
                android:rotation="-90"
                app:srcCompat="@android:drawable/arrow_down_float" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:background="#00A2E8"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <Button
            android:id="@+id/btn_obstacle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#00A2E8"
            android:text="Eviter obstacle"
            android:textColor="#99D9EA"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btn_suivi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#00A2E8"
            android:text="Suivi de ligne"
            android:textColor="#99D9EA"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:background="#006C9B"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="371dp">

            <ImageButton
                android:id="@+id/btn_main"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#00A2E8"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/btn_web"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#006C9B"
                app:srcCompat="@android:drawable/stat_sys_upload" />

            <ImageButton
                android:id="@+id/btn_program"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#006C9B"
                app:srcCompat="@android:drawable/ic_dialog_dialer" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
